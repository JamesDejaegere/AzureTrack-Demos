@page "/"

<div class="container">
    <div class="row justify-content-center">
        <img src="images/MoesTavern.png" />
    </div>
    <div class="row">
        <div class="col">
            <div class="row justify-content-center">
                <Waiter Name="Moe" OnWaiteringCallback="WriteActivity"></Waiter>
            </div>
        </div>
        <div class="col">
            <div class="row justify-content-center">
                <Waiter Name="Renee" OnWaiteringCallback="WriteActivity"></Waiter>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div>@Activities</div>
    </div>
</div>

@code
{
    public MarkupString Activities { get; set; }

    public void WriteActivity(string message)
    {
        Activities = new MarkupString($"{DateTime.Now:T}: <strong>{message}</strong><br/>{Activities.Value}");
        StateHasChanged();
    }
}